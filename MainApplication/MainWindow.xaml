        xmlns:View="clr-namespace:MVVM.View;assembly=MVVM.View" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="MainApplication.MainWindow"
        Title="MainWindow" Height="503" Width="776.75" x:Name="window">
    <Grid>
    	<telerik:RadButton Content="Employee" HorizontalAlignment="Left" Margin="89,10,0,0" VerticalAlignment="Top" Command="{Binding MenuCommand, ElementName=window}" CommandParameter="Employee"/>
    	<telerik:RadButton Content="Department" HorizontalAlignment="Left" Margin="159,10,0,0" VerticalAlignment="Top" Command="{Binding MenuCommand, ElementName=window}" CommandParameter="Dpt"/>
    	<telerik:RadButton Content="Search" HorizontalAlignment="Left" Margin="240,10,0,0" VerticalAlignment="Top" Command="{Binding MenuCommand, ElementName=window}" CommandParameter="Search"/>
    	<ContentPresenter x:Name="contentPresenter" Margin="0,59.776,0,0"/>
    </Grid>
</Window>
